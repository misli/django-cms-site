#!/bin/bash

# run django-cms migrate on first boot (unless AUTO_MIGRATE=0|n|no|f|false)
if [[ ! "${AUTO_MIGRATE,,}" =~ ^(0|n|no|f|false)$ ]] && [ ! -e .migrated ]; then
    su -s /bin/bash -c 'django-cms migrate --no-input' www-data && touch .migrated
fi

# run nginx server
exec nginx -g "daemon off;" -c "${NGINX_CONF:-/app/conf/nginx.conf}"
